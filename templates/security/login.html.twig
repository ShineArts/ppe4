{% extends 'base.html.twig' %}

        {% block body %}
            <div class="row" style="margin: 15%">
                <div class="col-sm-2"></div>
                <div class="col-sm-8" style="background-color: white; padding: 10px 10px 10px 10px; border-radius: 10px;">
                    <form method="post">
                        {% if error %}
                            <div class="alert alert-danger">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
                        {% endif %}

                        {% if app.user %}
                            <div class="mb-3">
                                You are logged in as {{ app.user.username }}, <a
                                        href="{{ path('app_logout') }}">Logout</a>
                            </div>
                        {% endif %}

                        <center><h1 class="h3 mb-3 font-weight-normal">Veuillez vous connectez.</h1></center>
                        <label for="inputEmail">Courriel</label>
                        <input type="email" value="{{ last_username }}" name="email" id="inputEmail"
                               class="form-control"
                               required
                               autofocus>
                        <br/>
                        <label for="inputPassword">Mot de passe</label>
                        <input type="password" name="password" id="inputPassword" class="form-control" required>

                        <input type="hidden" name="_csrf_token"
                               value="{{ csrf_token('authenticate') }}"
                        >

                        {#
                            Uncomment this section and add a remember_me option below your firewall to activate remember me functionality.
                            See https://symfony.com/doc/current/security/remember_me.html

                            <div class="checkbox mb-3">
                                <label>
                                    <input type="checkbox" name="_remember_me"> Remember me
                                </label>
                            </div>
                        #}
<br/>
                        <button class="btn btn-lg btn-primary col-sm-12" type="submit">
                            Sign in
                        </button>
                    </form>
                </div>
                <div class="col-sm-2"></div>
            </div>
        {% endblock %}

